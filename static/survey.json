{
    "survey" : [
        {
            "questions" : [
                {
                    "text": "What's your name?",
                    "answer":
                    {
                        "type" : "input",
                        "attributes": { "autofocus": "yes", "placeholder": "Tom Cruise"}
                    }
                }
            ]
        },
        {
            "questions" : [
                {
                    "text": "Do you have a car?",
                    "answer":
                    {
                        "type" : "radio",
                        "options": [
                            { "id": "yes", "value": "Yes", "action": "js:showSections([1]" },
                            { "id": "no",  "value": "No", "action": "js:hideSections([1,2]" }
                        ]
                    }
                },
                {
                    "tag": "make",
                    "text": "What is the make of your car?",
                    "answer":
                    {
                        "type" : "select",
                        "url": "/survey/cars/makes",
                        "action": { "*": "js:showSections([2])" }
                    }
                },
                {
                    "text": "What is the model of your car?",
                    "answer":
                    {
                        "type" : "select",
                        "url": "/survey/cars/models/<make.value>"
                    }
                }
            ]
        }
    ]
}